<div class="container">
  <h2><%=	 @post.title %></h2>
  <%= @post.content %>
  <hr>
  <h3>Comments</h3>
  <%	 if @comments.length == 0 %>
    <p>There are no comments yet</p>
  <%	 else %>
    <%	 @comments.each do |c| %>
      <hr class="divider" width="10%" align="left">
      <comment>
        <p><%=	 c.message %></p>
      </comment>
      <footer>
        <small>
          Author: <%=	 c.user.username.capitalize %>  <br>
          Created: <%=	 c.created_at %><br>
        </small>
      </footer>
    <%	 end %>
  <%	 end %>
  <br>
  <%=	 link_to 'New comment', new_comment_path, class: 'btn btn-primary' %>
  <hr>
  <footer>
    <%=	 link_to 'Go back', posts_path %> <br>
    <%	 if signed_in? && @current_user == @post.user %>
      <%=	 link_to 'Edit post', edit_post_path %> <br>
      <%=	 link_to 'Delete post', post_path(@post),
                  method: :delete,
                  data: { confirm: 'Are you sure?' } %>
    <%	 end %>
  </footer>
</div>

